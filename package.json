{
  "name": "revelation",
  "displayName": "启示路",
  "version": "1.0.0",
  "description": "启示路 - 一款无限知识库应用",
  "main": "main.js",
  "private": true,
  "type": "module",
  "homepage": "https://qcgm1978.github.io/revelation/",
  "scripts": {
    "dev": "vite",
    "build": "vite build && mkdir -p dist/assets/android && cp -r assets/android/* dist/assets/android/",
    "deploy": "vite build && npx gh-pages -d dist -r https://github.com/qcgm1978/revelation.git -f",
    "preview": "vite preview",
    "format-file": "node utils/fileFormatter.js",
    "capacitor:build:android": "sudo npm run build && sudo npx cap sync android && sudo npx cap open android",
    "capacitor:build:android:noopen": "sudo npm run build && sudo npx cap sync android && cd android && sudo chmod -R 777 ./",
    "capacitor:build:android:ci": "npm run build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "vercel": "vercel",
    "deploy:gh-pages": "vite build && npx gh-pages -d dist -r https://github.com/qcgm1978/revelation.git -f"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/app": "^7.0.2",
    "@capacitor/browser": "^7.0.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/filesystem": "^7.1.4",
    "@google/genai": "^1.7.0",
    "@ionic/react": "^8.7.3",
    "@ionic/react-router": "^8.7.3",
    "@vitejs/plugin-react": "^5.0.2",
    "langextract": "^1.2.0",
    "query-string": "^9.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.9.1",
    "react-router-dom": "^7.9.1",
    "sse.js": "^2.7.1",
    "terser": "^5.44.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.10",
    "concurrently": "^9.1.0",
    "gh-pages": "^6.3.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.revelation.app",
    "productName": "启示路",
    "directories": {
      "output": "public/release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
